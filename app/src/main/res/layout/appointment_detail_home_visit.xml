<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@mipmap/profile_bg"
        android:id="@+id/toll"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/back_press_app"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Appointment Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/dr_image"
        android:background="@mipmap/app_dr_vijay_sharma"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <RelativeLayout
        android:layout_below="@+id/dr_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="3"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border_splash_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/app_checkup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#7391a2"
                    android:text="Monthly Checkup"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/app_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#7391a2"
                    android:text="ID : 3242"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:background="@drawable/border_splash_bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/app_shivank_sharma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#7391a2"
                    android:text="Shivank Sharma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/app_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#7391a2"
                    android:text="+91090078601"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/app_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#7391a2"
                    android:text="$30.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/app_ref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#7391a2"
                    android:text="Ref : 54123697"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>
        </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Hiranandani Hospital Road,Hill Side Avenue,Hiranandi Garden,Mumbai Mahrashtra 40076"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#58a7f2"

                android:text="Get Direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:background="@mipmap/down_arrow"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/map_view"
                android:background="@mipmap/map"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textSize="10sp"
                    android:layout_marginRight="5dp"
                    android:textColor="#fff"
                    android:background="#ff6f6f"
                    android:layout_marginLeft="50dp"
                    android:text="Cancle"
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/reshedule_app"
                    android:textSize="10sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fff"
                    android:background="#58a7f2"
                    android:layout_marginRight="50dp"
                    android:text="Reschedule"
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />


            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>
    </ScrollView>