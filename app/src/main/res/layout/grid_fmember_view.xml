<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:background="@mipmap/sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/profile_pic_member"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@mipmap/select_male"
                android:layout_width="50dp"
                android:layout_height="60dp" />


            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/profile_pic_member"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="#346da3"
                android:textSize="15sp"
                android:id="@+id/member_name"
                android:text="Vijay Sharma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:layout_below="@+id/member_name"
                android:id="@+id/age"
                android:layout_marginTop="30dp"
                android:textColor="#346da3"
                android:textSize="10sp"
                android:text="36 Year Old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>


</android.support.v7.widget.CardView>

</LinearLayout>