<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentRight="true"
            android:background="@mipmap/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/main"
            android:background="@mipmap/booking_vector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#346da3"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:text="Booking Method"
            android:id="@+id/text1"
            android:layout_below="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#346da3"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:text="You Can opt either one of the option"
            android:layout_below="@+id/text1"
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#346da3"
            android:layout_centerHorizontal="true"
            android:textSize="8sp"
            android:text="Below For Sample Collection"
            android:layout_below="@+id/text2"
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:background="@drawable/button_edges_lblue"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:text="Visit Lab"
            android:drawableRight="@mipmap/next_arrow_white"
            android:layout_below="@+id/text3"
            android:id="@+id/btn1"
            android:paddingRight="10dp"
            android:layout_width="200dp"
            android:layout_height="35dp" />
        <Button
            android:layout_marginBottom="25dp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:background="@drawable/button_edges_lblue"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:text="Home Collection"
            android:drawableRight="@mipmap/next_arrow_white"
            android:layout_below="@+id/btn1"
            android:id="@+id/btn2"
            android:paddingRight="10dp"
            android:layout_width="200dp"
            android:layout_height="35dp" />


    </RelativeLayout>






</RelativeLayout>